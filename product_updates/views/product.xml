        <record id="stock_production_inherit_lot_form_view" model="ir.ui.view">
            <field name="name">stock_production_inherit_lot_form_view</field>
            <field name="model">stock.production.lot</field>
            <field name="inherit_id" ref="stock.view_production_lot_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='company_id']"
                       position="after">

                    <field name="key_no"/>
                    <field name="currency_device_no"/>
                    <field name="location"/>

                </xpath>
            </field>
        </record>

        <record id="account_inherit_move_form_view" model="ir.ui.view">
            <field name="name">account_inherit_move_form_view</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='payment_reference']"
                       position="after">
                    <field name="driver_name"/>
                    <field name="wrranty_date_start"/>
                    <field name="wrranty_date_end"/>
                </xpath>
                <xpath expr="//notebook/page/field[@name='invoice_line_ids']/tree/field[@name='product_id']"
                       position="after">
                    <field name="lot_serial"/>
                    <field name="key_no"/>
                    <field name="currency_device_no"/>
                    <field name="location"/>
                </xpath>
            </field>
        </record>

        <record id="so_order_inherit_form_view" model="ir.ui.view">
            <field name="name">so_order_inherit_form_view</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook/page/field[@name='order_line']/tree/field[@name='product_id']"
                       position="after">
                    <field name="lot_serial"/>
                    <field name="key_no"/>
                    <field name="currency_device_no"/>
                    <field name="location"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>