                                        <!--                                                <b>-->
                                        <!--                                                    <t t-esc="sum(o.mapped('invoice_line_ids.quantity'))"/>-->
                                        <!--                                                </b>-->
                                        <!--                                            </td>-->
                                        <!--                                            <td>-->

                                        <!--                                            </td>-->
                                        <!--                                            <td>-->
                                        <!--                                                <b>-->
                                        <!--                                                    <t t-esc="sum(o.mapped('invoice_line_ids.price_unit'))"/>-->
                                        <!--                                                </b>-->
                                        <!--                                            </td>-->
                                        <!--                                            <td>-->
                                        <!--                                                <b>-->
                                        <!--                                                    <t t-esc="sum(o.mapped('invoice_line_ids.price_total'))"/>-->
                                        <!--                                                </b>-->
                                        <!--                                            </td>-->
                                        <!--                                        </tr>-->
                                    </tbody>
                                </table>

                            </div>
                            <br/>
                            <div align="right" width="40%">
                                <table class="supplier" width="40%" dir="rtl"
                                       style=" text-align: center; font-weight: bold;background-color: white; border: 1px solid white;">
                                    <tr>

                                        <td>
                                            <h4>
                                                <field t-field="o.amount_total"/>
