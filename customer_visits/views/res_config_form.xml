<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="customer_visits_inherited_form_view" model="ir.ui.view">
        <field name="name">customer.visits.config.form</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="crm.res_config_settings_view_form"/>
        <field name="arch" type="xml">
			<xpath expr="//div[@data-key='crm']" position="inside">
                <h2>Customer Visits </h2>
                <div class="row mt16 o_settings_container">
                    <div class="col-12 col-lg-6 o_setting_box" title="(Customer Visits).">
                            <div class="o_setting_left_pane"/>
                            <div class="o_setting_right_pane">
                                <label for="location_distance_buffer"/>
                                <div class="text-muted">
                                    Location Distance Buffer (Meter)
                                </div>
                                <field name="location_distance_buffer"/>
                            </div>
                    </div>
                 </div>
            </xpath>
        </field>
    </record>
    </data>
</odoo>