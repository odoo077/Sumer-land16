<odoo>
        <record id="auto_approve_customers_form_view" model="ir.ui.view">
            <field name="name">auto.approve.customers.config.form</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="base.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@data-key='sale_management']" position="inside">
                    <h2>Auto Approve Customers </h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-12 col-lg-6 o_setting_box" title="(Auto Approve Customers).">
                            <div class="o_setting_left_pane">
                                <field name="auto_approve_customers"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="auto_approve_customers"/>
                                <div class="text-muted">
                                    Auto Approve Customers
                                </div>
                            </div>
                        </div>
                     </div>
                </xpath>
            </field>
        </record>
</odoo>