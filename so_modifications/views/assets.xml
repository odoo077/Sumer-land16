<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="account_asset_inherit_form_sumer" model="ir.ui.view">
            <field name="name">account_asset_inherit_form_sumer</field>
            <field name="model">account.asset</field>
            <field name="inherit_id" ref="account_asset.view_account_asset_form"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook/page[@name='related_items']" position="after">
                    <page string="Other Info" name="other_info">
                        <group>
                            <group>
                                <field name="machine_sn" attrs="{'invisible': [('company_id', '!=', 1)]}"/>
                                <field name="kelon_number" attrs="{'invisible': [('company_id', '!=', 1)]}"/>
                                <field name="bt11_sn" attrs="{'invisible': [('company_id', '!=', 1)]}"/>
                                <field name="location_name" attrs="{'invisible': [('company_id', '!=', 1)]}"/>
                                <field name="wrranty_date_start" attrs="{'invisible': [('company_id', '!=', 1)]}"/>
                                <field name="service_dukan" attrs="{'invisible': [('company_id', '!=', 1)]}"/>
                                <field name="model" attrs="{'invisible': [('company_id', '!=', 1)]}"/>

                            </group>
                            <group>
                                <field name="wrranty_date_end" attrs="{'invisible': [('company_id', '!=', 1)]}"/>
                                <field name="remain_days" attrs="{'invisible': [('company_id', '!=', 1)]}"/>
                                <field name="warranty" attrs="{'invisible': [('company_id', '!=', 1)]}"/>
                                <field name="address" attrs="{'invisible': [('company_id', '!=', 1)]}"/>
                                <field name="owner" attrs="{'invisible': [('company_id', '!=', 1)]}"/>
                                <field name="governorate" attrs="{'invisible': [('company_id', '!=', 1)]}"/>
                                <field name="machine_kind" attrs="{'invisible': [('company_id', '!=', 1)]}"/>
                                <field name="counter" attrs="{'invisible': [('company_id', '!=', 1)]}"/>

                            </group>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>