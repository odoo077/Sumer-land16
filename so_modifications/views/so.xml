<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="sale_order_inherit_form_sumer" model="ir.ui.view">
            <field name="name">sale_order_inherit_form_sumer</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='payment_term_id']" position="after">
                    <field name="wrranty_date_start" attrs="{'invisible': [('company_id', '!=', 1)]}"/>
                    <field name="wrranty_date_end" attrs="{'invisible': [('company_id', '!=', 1)]}"/>
                    <field name="remain_days" attrs="{'invisible': [('company_id', '!=', 1)]}"/>
                    <field name="wrranty_type" attrs="{'invisible': [('company_id', '!=', 1)]}"/>
<!--                    <field name="company_id"/>-->
                </xpath>
            </field>
        </record>
    </data>
</odoo>